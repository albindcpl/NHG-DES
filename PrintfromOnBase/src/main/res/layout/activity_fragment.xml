<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcpl.printfromonbase.FragmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51dp"
        android:orientation="horizontal">



        <fragment
            android:id="@+id/fragment1"
            android:name="com.dcpl.printfromonbase.Fragment_DocType"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout="@layout/firstfragment" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <FrameLayout
            android:id="@+id/fragment2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2" />


    </LinearLayout>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/ProgressBarDocument"
        android:visibility="invisible"
        android:background="@drawable/prograssbar_color"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_ground">


        <ImageView
            android:id="@+id/ivMenuBarr"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/information"></ImageView>

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/tvtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:fontFamily="@font/hpsimplified"
            android:textColor="#ffffff"
            android:textSize="31sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#CCCCCC" />

</RelativeLayout>

