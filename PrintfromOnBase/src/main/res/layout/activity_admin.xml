<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    tools:context=".Admin_Login_Screen">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/admin_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hpsimplified"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text= "@string/Welcome_Print_from_OnBase"
        android:textColor="#ffffff"
        android:textSize="31sp"
        android:textStyle="bold" />



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:background="#ffffff" />
    />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="50dp"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="200dp"
          android:layout_marginTop="20dp"
          android:padding="20dp"
          android:text="Admin Login"
          android:fontFamily="@font/hpsimplified"
          android:textColor="#ff7800"
          android:textSize="23sp"
          android:textStyle="bold" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/usernameWrapper"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="150dp"
          android:textColorHint="#ffb319">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/hpsimplified"
            android:layout_marginRight="100dp"
            android:hint="Admin Username"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#ff7800"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:textColor="#ff7800"
            android:textSize="23sp">

        </com.google.android.material.textfield.TextInputEditText>
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/passwordWrapper"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="220dp"
          android:textColorHint="#ffb319"
          app:passwordToggleDrawable="@drawable/password_show"
          app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:hint="Admin Password"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/hpsimplified"
            android:maxLength="15"
            android:backgroundTint="#ff7800"
            android:textColor="#ff7800"
            android:textSize="23sp" />

      </com.google.android.material.textfield.TextInputLayout>



      <Button
          android:id="@+id/btnLogin"
          android:layout_marginTop="320dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Login"
          android:background="@drawable/roundedbutton"
          android:textColor="#ffffff"
          android:layout_marginLeft="150dp"
          android:layout_marginRight="150dp"
          android:fontFamily="@font/hpsimplified"
          android:textSize="23sp"
          android:layout_marginBottom="20dp"/>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:src="@drawable/keyy"
          android:id="@+id/ivKeyy"
          android:layout_marginLeft="90dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="340dp"/>


    </androidx.cardview.widget.CardView>
  </FrameLayout>
</LinearLayout>
