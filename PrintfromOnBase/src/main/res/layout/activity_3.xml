<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#54898383">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:id="@+id/ivPluses"
      android:src="@drawable/pluses"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/ivMinus"
        android:src="@drawable/minus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0096D6"
        android:text="Setting"
        android:fontFamily="@font/hpsimplified"
        android:layout_marginLeft="300dp"
        android:padding="5dp"
        android:textSize="18sp"
        />

  </LinearLayout>

  <ScrollView android:layout_marginTop="35dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/SCscrollView">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
