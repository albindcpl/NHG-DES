      <FrameLayout
          android:id="@+id/dataContainer"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/buttonBarLayout"
          android:layout_marginLeft="@dimen/activity_vertical_margin"
          android:layout_marginRight="@dimen/activity_vertical_margin"
          android:visibility="gone" />

      <ProgressBar
          android:id="@+id/ProgressBarScreen"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_centerInParent="true"
          android:background="@drawable/prograssbar_color"
          android:visibility="invisible">

      </ProgressBar>

      <LinearLayout
          android:id="@id/buttonBarLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="@dimen/button_margin"
          android:layout_marginRight="@dimen/button_margin"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/hpsimplified"
            android:padding="2dp"
            android:text="Copies"
            android:textColor="#0096D6"
            android:textSize="23sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/decrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="-"
            android:textColor="#9ee6D6"
            android:textSize="23sp"
            android:textStyle="bold"></Button>

        <TextView
            android:id="@+id/integer_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
