            android:fontFamily="@font/hpsimplified"
            android:text="True"
            android:textColor="#9ee6D6"
            android:textSize="20dp" />


        <RadioButton
            android:id="@+id/radioFalses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:fontFamily="@font/hpsimplified"
            android:text="False"
            android:textColor="#9ee6D6"
            android:layout_marginBottom="100dp"
            android:textSize="20dp" />
      </RadioGroup>

      <RadioGroup
          android:id="@+id/radioGroupDocumentFormat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="400dp"
          android:layout_marginTop="250dp"
          tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/hpsimplified"
            android:padding="15dp"
            android:text="Document Format"
            android:textColor="#0096D6"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioAutoDF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:checked="false"
            android:fontFamily="@font/hpsimplified"
            android:text="Auto"
            android:textColor="#9ee6D6"
            android:textSize="20dp" />


        <RadioButton
            android:id="@+id/radioJPEG"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:fontFamily="@font/hpsimplified"
            android:text="JPEG"
            android:textColor="#9ee6D6"
            android:textSize="20dp" />

