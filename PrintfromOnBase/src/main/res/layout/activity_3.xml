            android:textColor="#0096D6"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioDefaultStaple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
